<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>Profile index</title>
</head>
<body>
  <h1>Profiles Page</h1>
 <div>
      <main class="bg-light">
        <div class="container py-5 px-3">
          <div 
            class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g5 g-sm-3 g-xxl-5 px-sm-5 px-4"
          >
            <% profiles.forEach(profile => { %>
              <div class="col">
                <a class="text-decoration-none" href="/profiles/<%= profile._id %>">
                  <div class="card shadow-sm">
                    <% if (profile.avatar) { %>
                      <img
                        class="card-img-top"
                        src="<%= profile.avatar %>"
                        alt="<%= profile.name %>'s avatar"
                        width="100%"
                        height="170"
                      />
                    <% } else {%>
                      <img
                        class="card-img-top"
                        src="/images/icons/user.png"
                        alt="A placeholder avatar"
                        width="100%"
                        height="170"
                      />
                    <% } %>
                    <div class="card-body">
                      <p class="card-title fs-5 text-dark mb-0">
                        <%= profile.name %>
                      </p>
                      <p class="card-text text-dark fs-6 mt-0">
                        Joined <%= profile.createdAt.toLocaleDateString() %>
                      </p>
                    </div>
                  </div>
                </a>
              </div>
            <% }) %>
          </div>
        </div>
      </main>
 </div>
</body>
</html>